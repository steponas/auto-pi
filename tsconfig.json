{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react",
    "strictNullChecks": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "server/*": ["src/server/*"],
      "client/*": ["src/client/*"],
      "common/*": ["src/common/*"],
      "raspberry/*": ["src/raspberry/*"]
    },
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
